  </ItemGroup>

  <ItemGroup>
    <Resource Include="icon.png" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="MainWindow.xaml">
      <CustomToolNamespace>XamlIntelliSenseFileGenerator</CustomToolNamespace>
    </Page>
  </ItemGroup>

